# UI (Vite)
VITE_PTY_WS_URL=ws://127.0.0.1:8081/pty
VITE_PTY_TOKEN=change-me

# PTY server
PTY_WS_PORT=8081
PTY_TOKEN=change-me
PTY_ALLOWED_ORIGIN=http://localhost:3000
PTY_IDLE_TIMEOUT_MS=300000

# API server
API_PORT=8787
API_ALLOWED_ORIGIN=http://localhost:3000

# Codex session supervisor
CODEX_CMD=codex
CODEX_ARGS=run
CODEX_SESSION_ID=repo-your-repo-id

# Codex app-server bridge
CODEX_APP_SERVER_CMD=codex
CODEX_APP_SERVER_ARGS=app-server
CODEX_APP_SERVER_AUTO_RESTART=true
